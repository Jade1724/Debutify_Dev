<div id="section-{{ section.id }}" class="section-full-width">
  <div class="box">
    <div class="grid">
      <div class="grid__item four-twelfths">
        <div>
          {{ section.blocks[0].settings.image | img_url: '2048x' | img_tag }}
        </div>
      </div>
    </div>
  </div>
</div>

</div>



{% schema %}
{
  "name": "Custom Gallery",
  "tag": "section",
  "class": "custom-gallery",
  "max_blocks": 5,
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header"
    }
  ],
  "blocks": [
    {
      "name": "Image",
      "type": "image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}