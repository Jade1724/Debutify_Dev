<div id="section-{{ section.id }}" class="{{ section.settings.section_style }}" data-section-id="{{ section.id }}" data-section-type="featured-content-section">
  <div class="box">
    <div class="wrapper">
      
        <div class="grid">
          <div class="grid__item large--eight-twelfths push--large--two-twelfths {{ section.settings.text_alignment }}">
            {%- unless section.settings.title == blank -%}
              <h2>{{ section.settings.title | escape }}</h2>
            {%- endunless -%}

            {%- assign second_part = product.description | split: '<p>[split_description]</p>' | last -%}

            {%- unless second_part contains '[split_description]' -%}
              <div class="rte">{{ second_part }} </div>
            {%- else -%}
              <div class="rte">{{ product.description | split: '[split_description]' | last }} </div>
            {%- endunless -%}

            {%- unless section.settings.button_label == blank -%}
              <a href="{{ section.settings.button_link }}" class="btn {{ section.settings.button_style }}">
                {{ section.settings.button_label | escape }}
              </a>
            {%- endunless -%}
          </div>
        </div>
  
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product Description",
    "class": "featured-content-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Product Description"
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Section style",
        "default": "section-blank",
        "options": [
          {
            "value": "section-blank",
            "label": "Blank background"
          },
		      {
            "value": "section-default",
            "label": "Accent background"
          },
          {
            "value": "section-border",
            "label": "Border top"
          }
        ]
      },
	    {
        "type": "select",
        "id": "text_size",
        "label": "Text size",
        "default": "large",
        "options": [
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ]
      },
	    {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "text-center",
        "options": [
          {
            "value": "",
            "label": "Left"
          },
 		      {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },	
	    {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "default": "btn--primary",
        "options": [
          {
            "value": "",
            "label": "Default"
          },
          {
            "value": "btn--primary",
            "label": "Full"
          },
          {
            "value": "btn-outline-primary",
            "label": "Outline"
          }
        ]
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Featured content",
        "category": "Image and text"
      }
    ]
  }
{% endschema %}
